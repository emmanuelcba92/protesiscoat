rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /protesis/{document} {
      allow read: if true; 
      allow create: if request.resource.data.paciente != null 
                    && request.resource.data.empresa != null;
      allow update: if true;
      allow delete: if false; 
    }
    match /smp/{document} {
      // Restauramos acceso total para que los profesionales puedan guardarse
      allow read, write: if true; 
    }
  }
}
