rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // SOLO permite leer o escribir si el usuario inició sesión con Google
      // Y su correo está en la lista de permitidos
      allow read, write: if request.auth != null && 
        (request.auth.token.email == "clinicacuret@gmail.com" || 
         request.auth.token.email == "emmanuel.ag92@gmail.com");
    }
  }
}
